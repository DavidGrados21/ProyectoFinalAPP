<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:background="@drawable/fondo"
    android:padding="16dp">

    <!-- Texto descriptivo -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"

        android:gravity="center"
        android:text="Lista de Alumnos"
        android:textColor="#F3A006"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Busca un alumno por su nombre o apellido:"
        android:textColor="#F3A006"
        android:textSize="14sp" />

    <!-- EditText para buscar alumnos -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D5D3D3"
        android:foregroundTint="#E6CBCB"
        android:hint="Buscar por nombre o apellido"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#F3A006" />

    <!-- RecyclerView para mostrar la lista de alumnos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAlumnos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:paddingTop="8dp" />
</LinearLayout>
