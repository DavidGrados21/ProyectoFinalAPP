<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/fondo"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuRigistro">



    <TextView
        android:id="@+id/tvRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:text="¿Cómo deseas registrarte?"
        android:textColor="#F3A006"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btnProfesor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProfesor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="44dp"
        android:elevation="4dp"
        android:text="Profesor"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:backgroundTint="#6200EE"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRegistro"
        app:rippleColor="#3700B3"
        app:strokeColor="#6200EE"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAlumno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alumno"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:backgroundTint="#03DAC6"
    app:cornerRadius="8dp"
    app:layout_constraintTop_toBottomOf="@id/btnProfesor"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:strokeWidth="1dp"
    app:strokeColor="#03DAC6"
    app:rippleColor="#018786"
    android:elevation="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
